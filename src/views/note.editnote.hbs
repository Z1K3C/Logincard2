<div class="col-md-4 mx-auto pt-4">
  <div class="card">
    <div class="card-header">
      <h3>Edit Note</h3>
    </div>
    <div class="card-body">
      <form action="/editnote/{{note._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="title" class="form-control" value="{{note.title}}"/>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control">{{note.description}}</textarea>
        </div>
        <div class="form-group">
          <div class="col-md-4 d-flex justify-content-between align-items-center" style="max-width: 355px; max-height: 250px; overflow: hidden;">
            <img name="oldimage" src="/img/{{note.filename}}" class="card-img" alt="...">
          </div>
        </div>
        <div class="input-group mb-3">
          <div class="custom-file">
              <input type="file" name="image" class="custom-file-input" id="inputGroupFile02" accept=".jpg, .png">
              <label id="name2" class="custom-file-label text-left" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">Choose a file...
              </label>
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>